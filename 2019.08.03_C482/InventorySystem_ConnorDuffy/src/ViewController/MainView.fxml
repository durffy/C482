<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewController.MainViewController">
   <children>
      <VBox prefHeight="500.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="500.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Parts">
                <font>
                  <Font name="System Bold Italic" size="16.0" />
                </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#ButtonSearchParts" text="Search">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <TextField fx:id="PartsSearch" onAction="#ButtonSearchParts">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></TextField>
            <TableView fx:id="PartsTable" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="PartId" prefWidth="75.0" text="id" />
                <TableColumn fx:id="PartName" prefWidth="75.0" text="name" />
                  <TableColumn fx:id="PartStock" prefWidth="75.0" text="stock" />
                  <TableColumn fx:id="PartPrice" prefWidth="75.0" text="price" />
              </columns>
            </TableView>
            <Button mnemonicParsing="false" onAction="#ButtonAddPart" text="Add">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#ButtonModifyPart" text="Modify">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#ButtonDeletePart" text="Delete">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
      <VBox prefHeight="500.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Products">
                <font>
                  <Font name="System Bold Italic" size="16.0" />
                </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#ButtonSearchProducts" text="Search">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <TextField fx:id="ProductsSearch" onAction="#ButtonSearchProducts">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></TextField>
            <TableView fx:id="ProductsTable" prefHeight="200.0" prefWidth="200.0">
               <columns>
                  <TableColumn fx:id="ProductId" prefWidth="75.0" text="id" />
                  <TableColumn fx:id="ProductName" prefWidth="75.0" text="name" />
                  <TableColumn fx:id="ProductStock" prefWidth="75.0" text="stock" />
                  <TableColumn fx:id="ProductPrice" prefWidth="75.0" text="price" />
               </columns>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TableView>
            <Button mnemonicParsing="false" onAction="#ButtonAddProduct" text="Add">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#ButtonModifyProduct" text="Modify">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#ButtonDeleteProduct" text="Delete">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
      <Label text="Inventory Manager" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
